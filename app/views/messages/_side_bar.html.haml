.Side-bar
  .LeftHeader
    .LeftHeader__list
      .LeftHeader__userName
        = current_user.name
      %ul.LeftHeader__iconList
        %li.LeftHeader__icon
          = link_to new_group_path, class: "Top-items__icon" do
            = icon('far', 'edit', class: "Items__icon--edit")
        %li.LeftHeader__icon
          = link_to edit_user_path(current_user), class: "Top-items__icon" do
            = icon('fas', 'cog', class: "Items__icon--cog")
  .GroupList
    - current_user.groups. each do |group|
      .Group
        = link_to '#' do
          .Group__name
            = group.name
          .Group__message
